<%	 content_for :head do %>
    <%= auto_discovery_link_tag	  %>
<% end %>
<div id="a_list">
<h2>笑话幽默</h2>
<%	 @funs.each do |fun| %>
    <div class="a_item">
      <h3>
        <% if fun.category  %>
        <%= link_to '['+fun.category.name+'] ', category_funs_path(fun.category) %>
        <% end %>
        <%=link_to fun.title, fun %>
        <span>查看：<%= fun.click_time %> </span>
		<span>来自：<%= fun.from_url %> </span>
		<span>发布人：<%=  (fun.user_id==0) ? "匿名" : fun.user.login %></span>

      </h3>
      <div class="a_c">
        <%=	 raw((fun.body).to_s.truncate(200)) %>
        <%=	 link_to '阅读全文', fun%>
      </div>
    </div>
<%	 end %>
<%= will_paginate @funs ,:class => 'digg_pagination' %>
</div>
<style type="text/css">
#menubar a.m_funs{background: #9999ff;    color:#FFF;}
#menubar a.m_arti,a.m_home,a.m_novel,a.m_game,a.m_zu, a.m_piao,a.m_le{}
</style>