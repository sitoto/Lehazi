<div class="span-23">
  <hgroup>
    <label>当前位置： </label>
    <%=	 link_to '娱乐新闻', funs_path %>  >
     <% if !@article_category.nil?  %>
        <%= link_to @article_category.name , category_funs_path(@article_category) %>  >
     <% end %>
    列表
  <span style="float: right;">
      <label>热门搜索：</label>
