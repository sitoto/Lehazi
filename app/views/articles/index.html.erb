<%	 content_for :head do %>
    <%= auto_discovery_link_tag	  %>
<% end %>

<h2>news</h2>

<%	 @articles.each do |article| %>
    <div class="article">
      <h3><%= article.title %></h3>
      <% if article.category  %>
      <p class="category">
        分类：<%= link_to article.category.name, category_article_path(article.category) %>
      </p>
      <% end %>
      <p>
        <%= article.created_at.to_s(:short) %> by <%=	 article.user.login %> <br />
        <%=	 article.synopsis %><br />
        <%=	 link_to '阅读全文', article%>

      </p>
    </div>
<%	 end %>
<%= will_paginate @infos ,:class => 'digg_pagination' %>