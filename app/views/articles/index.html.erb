<%	 content_for :head do %>
    <%= auto_discovery_link_tag	  %>
<% end %>
<div id="a_list">
<h2>娱乐快递</h2>

<%	 @articles.each do |article| %>
    <div class="a_item">
      <h3>
        <% if article.category  %>
        <%= link_to '['+article.category.name+'] ', category_articles_path(article.category) %>
        <% end %>
        <%=link_to article.title, article %>
      </h3>
      <div class="a_c">
        <%= article.created_at.to_s(:short) %> by <%=	 article.user.login %> <br />
        <%=	 article.synopsis %>
        <%=	 link_to '阅读全文', article%>
      </div>
    </div>
<%	 end %>
<%= will_paginate @articles ,:class => 'digg_pagination' %>
</div>