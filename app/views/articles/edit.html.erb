      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    标题<br />
    <%= f.text_field :title, :size => 60 %>
  </div>
  <div class="field">
    简介<br />
    <%= f.text_area :synopsis, :rows => 4 , :cols => 60 %>
  </div>
   <div class="field">
    内容<br />
    <%= f.text_area :body, :row => 20, :cols => 60 %>
  </div>
  <div class="field">
    目录<br />
    <%= f.collection_select :category_id, Category.find(:all), :id, :name, :include_blank => true %>
  </div>

  </div>
  <div class="field">
    发布? <%= f.check_box :published %>
  </div>
  <div class="field">
    <%= f.submit  '提交' %>
    <%= link_to '取消'  ,articles_url %>
  </div>
<% end %>
