<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Enabled?</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('odd','even') %>">
    <td><%= user.login %></td>
    <td><%= user.email %></td>
    <td><%= user.enabled ? 'yes' :'no' %>
    <%	 unless user == current_user %>
        <%	 if user.enabled %>
            [<%= link_to 'disable' ,user_url(user.id), confirm: 'Are you sure?', method: :delete %>]
            <%	 else %>
            [<%= link_to 'enable', enable_user_url(user.id), method: :put %>]
            <%	 end %>
        <%	 end %></td>
    <td><%= link_to 'Show', user %></td>
    <td>[<%= link_to 'edit permissions', user_roles_url(user) %>]</td>

  </tr>
<% end %>
</table>

