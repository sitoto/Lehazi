<h1>New topic</h1>

<%= form_for(@topic ,:url => forum_topics_path) do |f| %>
         <p>标题：<br /> <%=	 f.text_field :name, :size => 40 %> </p>
         <p>采集网址：<br /> <%=	 f.text_field :from_url, :size => 80 %> </p>

         <p>内容：<br/> <%=	text_field :post, :body, :size => 20 %></p>
         <%= submit_tag '保存' %>
<%	 end %>

<%= link_to 'Back', forum_topics_path %>
