<h2><%= link_to '论坛', forums_path %> » <%= @forum.name %></h2>
<p>
    <%	 if is_logged_in? %>
        <%=	 link_to '发帖', new_forum_topic_path %>
      <%	 else %>
  <%= link_to '登陆', login_url	  %>
    <%	 end %>
</p>
<table id="topics">
  <tr>
    <th>Topics</th>
    <th>Posts</th>
    <th>Author</th>
    <th>time</th>
  </tr>

<% @topics.each do |topic| %>
  <tr class="<%= cycle("odd","even")%>">
    <td class="name">
      <%= link_to topic.name, forum_topic_posts_path(topic.forum_id,topic.id) %>
      <%	 if is_logged_in? and current_user.has_roles?('Moderator') %>
        <br/>
          <small>
            <%= link_to '编辑', edit_forum_topic_path(topic.forum_id,topic.id)%>
            <%=	 link_to '删除',forum_topic_path(topic.forum_id,topic.id), method: :delete ,:confirm => '确定？'  %>
          </small>
      <%	 end %>
    </td>
    <td class="reply"> <%= topic.posts_count %> </td>
    <td class="author"><%= link_to topic.user.login, user_path(topic.user) %></td>

    <td><%= topic.updated_at %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @topics ,:class => 'digg_pagination' %>
