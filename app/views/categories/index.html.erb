<h1>Listing categories</h1>
<%=	 raw(@htmlmenu) %>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Parent</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= category.parent_id %></td>
    <td><%= link_to 'Show', category %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path %>
